<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="16dp"
              android:gravity="center_horizontal">  <!-- Align contents to center -->

    <!-- Toolbar for the app -->
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:title="Upload File"
            android:background="?android:attr/colorPrimary"
            android:theme="?android:attr/actionBarTheme" />

    <!-- Button to trigger file selection -->
    <Button
            android:id="@+id/uploadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Image or Video"
            android:layout_gravity="center" />

    <!-- TextView to display the name of the selected file -->
    <TextView
            android:id="@+id/fileNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No file selected"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:gravity="center" />

    <!-- ProgressBar to simulate file upload progress -->
    <ProgressBar
            android:id="@+id/uploadProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center" />

    <!-- ImageView to display the uploaded image -->
    <ImageView
            android:id="@+id/uploadedImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_gallery"/>
</LinearLayout>
