<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33000000" /> <!-- Semi-transparent shadow -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Background Layer -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient
                    android:startColor="?colorPrimaryContainer"
                    android:endColor="?colorPrimaryContainer"
                    android:angle="90" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="@color/gray_dark" /> <!-- Soft gray border -->
        </shape>
    </item>
</layer-list>
