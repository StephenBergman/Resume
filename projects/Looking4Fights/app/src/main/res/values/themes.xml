<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.Looking4Fight" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary and secondary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorAccent">@color/accent_dark</item>

        <!-- Containers -->
        <item name="colorPrimaryContainer">@color/gray_light</item>
        <item name="colorSecondaryContainer">@android:color/darker_gray</item>

        <!-- Buttons -->
        <item name="colorButtonNormal">@color/primary</item>
        <item name="buttonBarPositiveButtonStyle">@color/secondary</item>
        <item name="buttonBarNeutralButtonStyle">@color/primary_light</item>
        <item name="buttonBarNegativeButtonStyle">@color/accent</item>


        <!-- Background and Surface -->
        <item name="colorSurface">@color/gray_light</item>
        <item name="android:colorBackground">@color/white</item>


        <!-- Text Colors -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryContainer">@android:color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSecondaryContainer">@android:color/black</item>
        <item name="colorOnBackground">@android:color/black</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="Theme.Looking4Fight" parent="Base.Theme.Looking4Fight"/>
</resources>
